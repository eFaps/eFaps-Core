<faces-config>

  <!-- resource bundle bean used for translation-->
  <managed-bean>
    <managed-bean-name>i18n</managed-bean-name>
    <managed-bean-class>org.efaps.beans.ResourceBundleBean</managed-bean-class>
    <managed-bean-scope>application</managed-bean-scope>
    <!-- set bundle (base) name -->
    <managed-property>
      <property-name>bundleName</property-name>
      <value>StringResource</value>
    </managed-property>
  </managed-bean>

  <!-- history bean -->
  <managed-bean>
    <managed-bean-name>history</managed-bean-name>
    <managed-bean-class>org.efaps.beans.HistoryBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
    <!-- translation resource settings -->
    <managed-property>
      <property-name>i18nBean</property-name>
      <value>#{i18n}</value>
    </managed-property>
    <!-- set object id from request parameters (after setting of i18nBean!) -->
    <managed-property>
      <property-name>oid</property-name>
      <value>#{param.oid}</value>
    </managed-property>
  </managed-bean>

  <!-- main toolbar menu -->
  <managed-bean>
    <managed-bean-name>menuMainToolbar</managed-bean-name>
    <managed-bean-class>org.efaps.beans.ToolbarBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
    <!-- sert toolbar menu (hard coded) -->
    <managed-property>
      <property-name>toolbarMenu</property-name>
      <value>MainToolBar</value>
    </managed-property>
  </managed-bean>

  <!-- table toolbar menu -->
  <managed-bean>
    <managed-bean-name>menuTableToolbar</managed-bean-name>
    <managed-bean-class>org.efaps.beans.ToolbarBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
    <!-- set object id from request parameters -->
    <managed-property>
      <property-name>oid</property-name>
      <value>#{param.oid}</value>
    </managed-property>
    <!-- set command name from request parameters -->
    <managed-property>
      <property-name>commandName</property-name>
      <value>#{param.command}</value>
    </managed-property>
  </managed-bean>

  <!-- title -->
  <managed-bean>
    <managed-bean-name>titleBean</managed-bean-name>
    <managed-bean-class>org.efaps.beans.TitleBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
    <!-- set object id from request parameters -->
    <managed-property>
      <property-name>oid</property-name>
      <value>#{param.oid}</value>
    </managed-property>
    <!-- set command name from request parameters -->
    <managed-property>
      <property-name>commandName</property-name>
      <value>#{param.command}</value>
    </managed-property>
  </managed-bean>

</faces-config>