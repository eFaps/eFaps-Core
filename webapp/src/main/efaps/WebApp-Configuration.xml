<common-systemconfiguration xmlns="http://www.efaps.org/xsd"
                            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                            xsi:schemaLocation="http://www.efaps.org/xsd http://www.efaps.org/xsd/eFaps_1.0.xsd">

  <uuid>50a65460-2d08-4ea8-b801-37594e93dad5</uuid>
  <file-application>eFaps-webapp</file-application>
  <file-revision>$Rev$</file-revision>
  <definition>
    <version-expression>(version==1)</version-expression>
    <name>WebApp-Configuration</name>
    <attribute>
      <key>CacheDuration</key>
      <value>3600</value>
      <description>
       This Attribute defines the Duration (in seconds) of a ePapsStaticContent 
       in the Cache of the Browser, before it will be retrieved again
       from the eFaps-DataBase.
      </description>
    </attribute>
    <attribute>
      <key>Picker4Person</key>
      <value>Admin_User_PersonPicker</value>
      <description>
        Defines the Picker for all Person Links like Creator, Modfier etc.
       </description>
    </attribute>
  </definition>
</common-systemconfiguration>

