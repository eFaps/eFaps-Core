                <!-- Use latest Lucene version -->
                <property name="hibernate.search.lucene_version" value="LUCENE_CURRENT" />
            </properties>
        </indexing>
        <eviction maxEntries="5000" strategy="LIRS" />
        <!--10 minutes, 5 minutes (miliseconds) -->
        <expiration lifespan="600000" maxIdle="300000" />
        <compatibility enabled="true" />
    </namedCache>

