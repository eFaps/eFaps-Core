<datamodel-sqltable xmlns="http://www.efaps.org/xsd"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://www.efaps.org/xsd http://www.efaps.org/xsd/eFaps_1.0.xsd">

  <uuid>8e09dc11-c37d-48e9-be61-996c5ce8095a</uuid>
  <file-application>eFaps-ClubWork</file-application>
  <file-revision>$Rev$</file-revision>
  <description>Main SQL-Table for eFaps-ClubWork containing all Persons that must be administrated.</description>
  
  <!-- install the SQL Table -->
  <definition>
    <version-expression>(version==2) || (version==latest)</version-expression>
    <name>ClubWork_AbstractSQLTable</name>
    <typeid-column>TYPEID</typeid-column>
    <database>
      <table-name>T_CWABSTRACT</table-name>
      <!-- columns -->
      <column name="TYPEID"        type="INTEGER"        not-null="true"/>
      <column name="NAME"          type="STRING_SHORT"   not-null="true"     length="128"/>
      <column name="FORENAME"      type="STRING_SHORT"   not-null="true"     length="128"/>
      <column name="IMGFILENAME"   type="STRING_SHORT"                       length="128"/>
      <column name="IMGFILELENGTH" type="INTEGER"/>
      <column name="CREATOR"       type="INTEGER"        not-null="true"/>
      <column name="CREATED"       type="DATETIME"       not-null="true"/>
      <column name="MODIFIER"      type="INTEGER"        not-null="true"/>
      <column name="MODIFIED"      type="DATETIME"       not-null="true"/>
      <!-- constrains -->
      <foreign name="T_CWABSTRACT_FK_CRTR"   key="CREATOR"   reference="T_USERPERSON(ID)"/>
      <foreign name="T_CWABSTRACT_FK_MDFR"   key="MODIFIER"  reference="T_USERPERSON(ID)"/>
    </database>
  </definition>


  <!-- create base SQL table -->
  <definition>
    <version-expression>(version==1)</version-expression>
    <database>
      <table-name>T_CWABSTRACT</table-name>
      <!-- columns -->
      <column name="TYPEID"        type="INTEGER"        not-null="true"/>
      <column name="NAME"          type="STRING_SHORT"   not-null="true"     length="128"/>
      <column name="FORENAME"      type="STRING_SHORT"   not-null="true"     length="128"/>
      <column name="IMGFILENAME"   type="STRING_SHORT"                       length="128"/>
      <column name="IMGFILELENGTH" type="INTEGER"/>
      <column name="CREATOR"       type="INTEGER"        not-null="true"/>
      <column name="CREATED"       type="DATETIME"       not-null="true"/>
      <column name="MODIFIER"      type="INTEGER"        not-null="true"/>
      <column name="MODIFIED"      type="DATETIME"       not-null="true"/>
     </database>
  </definition>

</datamodel-sqltable>

