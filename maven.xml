<project default="war" xmlns:j="jelly:core" xmlns:ant="jelly:ant">

  <!--
    Before a compile, the JavaCC grammar must be evaluated and the Java 
    source files created.
  -->
  <preGoal name="java:compile">
    <attainGoal name="javacc"/>
  </preGoal>

  <!--
    Before a site:deploy task start, a source distribution must be made!
  -->
  <postGoal name="xdoc:copy-user-resources">
    <attainGoal name="nightly-build"/>
  </postGoal>
  
  <!--
    Makes from the sourcecode a snaphot and copies this versions to the doc 
    distribution directory.
  -->
  <goal name="nightly-build">
    <attainGoal name="dist:build-src"/>
    <j:set var="docDistDir" value="${maven.docs.dest}/distribution"/>
    <ant:delete dir="${docDistDir}"/>
    <ant:mkdir dir="${docDistDir}"/>
    <ant:copy todir="${docDistDir}">
      <ant:fileset dir="${maven.dist.dir}" />
    </ant:copy>
  </goal>

</project>
