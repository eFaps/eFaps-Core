<datamodel-sqltable xmlns="http://www.efaps.org/xsd"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://www.efaps.org/xsd http://www.efaps.org/xsd/eFaps_1.0.xsd"
>
  <uuid>8abe60c3-1c83-473d-9f2b-dcd70dbeb09c</uuid>

  <!-- Common Version Table -->
  <definition>
    <version>
      <application>eFaps</application>
      <global>2</global>
      <local>1</local>
      <mode>(version==4) || (version==latest)</mode>
    </version>
    <name>Admin_Common_VersionSQLTable</name>
    <database>
      <table-name>T_CMVERSION</table-name>
      <!-- columns -->
      <column name="NAME"     type="STRING_SHORT" length="128" not-null="true" />
      <column name="REVISION" type="INTEGER"                   not-null="true" />
      <column name="CREATOR"  type="INTEGER"                   not-null="true" />
      <column name="CREATED"  type="DATETIME"                  not-null="true" />
      <column name="MODIFIER" type="INTEGER"                   not-null="true" />
      <column name="MODIFIED" type="DATETIME"                  not-null="true" />
      <!-- unique keys -->
      <unique name="COMVER_UK_NAMEREV" columns="NAME,REVISION" />
    </database>
  </definition>

  <!-- make the views for the SQL table -->
  <definition>
    <version>
      <application>eFaps</application>
      <global>2</global>
      <local>1</local>
      <mode>(version==2)</mode>
    </version>
    <database>
      <!-- view representing all versions -->
      <sql>
        create view V_COMMONVERSION 
             as select NAME, 
                       max(REVISION) as VERSION 
                  from T_CMVERSION 
                  group by NAME
      </sql>
      <table-name>T_CMVERSION</table-name>
    </database>
  </definition>

  <!-- create the SQL Table -->
  <definition>
    <version>
      <application>eFaps</application>
      <global>1</global>
      <local>1</local>
      <mode>(version==1)</mode>
    </version>
    <database>
      <table-name>T_CMVERSION</table-name>
      <!-- columns -->
      <column name="NAME"     type="STRING_SHORT" length="128" not-null="true" />
      <column name="REVISION" type="INTEGER"                   not-null="true" />
      <column name="CREATOR"  type="INTEGER"                   not-null="true" />
      <column name="CREATED"  type="DATETIME"                  not-null="true" />
      <column name="MODIFIER" type="INTEGER"                   not-null="true" />
      <column name="MODIFIED" type="DATETIME"                  not-null="true" />
      <!-- constraints -->
      <unique name="COMVER_UK_NAMEREV" columns="NAME,REVISION" />
    </database>
  </definition>

</datamodel-sqltable>
