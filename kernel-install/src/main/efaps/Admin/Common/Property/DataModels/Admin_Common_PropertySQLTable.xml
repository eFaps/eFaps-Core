<datamodel-sqltable  xmlns="http://www.efaps.org/xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   xsi:schemaLocation="http://www.efaps.org/xsd http://www.efaps.org/xsd/eFaps_1.0.xsd">
  <uuid>5cf99cd6-06d6-4322-a344-55d206666c9c</uuid>

  <!-- Common Properties -->

  <!-- create table -->
  <definition>
    <version>
      <application>eFaps</application>
      <global>1</global>
      <local>$Rev$</local>
      <mode>(version==1)</mode>
    </version>
    <database>
      <table-name>T_CMPROPERTY</table-name>
      <!-- columns -->
      <column name="ABSTRACT"   type="INTEGER"                    not-null="true"/>
      <column name="NAME"       type="STRING_SHORT" length="128"  not-null="true"/>
      <column name="VALUE"      type="STRING_SHORT" length="128"/>
      <!-- constraints -->
      <unique name="T_CMPROPERTY_UK_ABNAME" columns="ABSTRACT,NAME"/>
    </database>
  </definition>

  <!-- make the contraints for the SQL table -->
  <definition>
    <version>
      <application>eFaps</application>
      <global>2</global>
      <local>$Rev$</local>
      <mode>(version==4)</mode>
    </version>
    <database>
      <table-name>T_CMPROPERTY</table-name>
      <!-- constraints -->
      <foreign name="T_CMPROPERTY_FK_ABSTR"     key="ABSTRACT"      reference="T_CMABSTRACT(ID)"/>
<!-- on delete cascade -->
     </database>
  </definition>

  <!-- define datamodel -->
  <definition>
    <version>
      <application>eFaps</application>
      <global>3</global>
      <local>$Rev$</local>
      <mode>(version==5)</mode>
    </version>
    <name>Admin_Common_PropertySQLTable</name>
    <database>
      <table-name>T_CMPROPERTY</table-name>
    </database>
  </definition>
</datamodel-sqltable>
