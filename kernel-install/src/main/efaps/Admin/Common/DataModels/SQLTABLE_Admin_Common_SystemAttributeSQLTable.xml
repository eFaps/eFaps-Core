<datamodel-sqltable xmlns="http://www.efaps.org/xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.efaps.org/xsd http://www.efaps.org/xsd/eFaps_1.0.xsd"
>
  <uuid>35f15728-243b-4d67-ba55-e2715d865e99</uuid>

  <!-- Common Properties -->
  <definition>
    <version>
      <application>eFaps</application>
      <global>1</global>
      <local>$Rev$</local>
      <mode>(version==1)</mode>
    </version>

    <database>
      <table-name>T_CMSYSATTRIBUTE</table-name>
      <parent-table>T_CMABSTRACT</parent-table>
      <create>true</create>
      <update>true</update>
      <!-- columns -->
      <column name="VALUE" type="STRING_LONG" length="2048" not-null="true" />
    </database>
  </definition>

  <!-- define datamodel -->
  <definition>
    <version>
      <application>eFaps</application>
      <global>3</global>
      <local>$Rev$</local>
      <mode>(version==2)</mode>
    </version>
    <database>
      <sql>
        create view V_COMMONSYSATTRIBUTE as 
          select T_CMABSTRACT.ID, 
                 T_CMABSTRACT.NAME, 
                 T_CMABSTRACT.UUID, 
                 T_CMSYSATTRIBUTE.VALUE 
            from T_CMABSTRACT
            join T_CMSYSATTRIBUTE 
              on T_CMABSTRACT.ID = T_CMSYSATTRIBUTE.ID;
      </sql>
      <table-name>T_CMSYSATTRIBUTE</table-name>
    </database>
  </definition>
  <definition>
    <version>
      <application>eFaps</application>
      <global>3</global>
      <local>$Rev$</local>
      <mode>(version==5)</mode>
    </version>
    <name>Admin_Common_SystemAttributeSQLTable</name>
    <database>
      <table-name>T_CMSYSATTRIBUTE</table-name>
    </database>
  </definition>
</datamodel-sqltable>
