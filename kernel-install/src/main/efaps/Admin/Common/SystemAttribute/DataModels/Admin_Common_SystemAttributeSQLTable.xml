<datamodel-sqltable xmlns="http://www.efaps.org/xsd"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://www.efaps.org/xsd http://www.efaps.org/xsd/eFaps_1.0.xsd">

  <uuid>35f15728-243b-4d67-ba55-e2715d865e99</uuid>
  <file-application>eFaps-kernel</file-application>
  <file-revision>$Rev$</file-revision>

  <!-- Common Properties -->
  <definition>
    <version-expression>(version==4) || (version==latest)</version-expression>
    <name>Admin_Common_SystemAttributeSQLTable</name>
    <database>
      <table-name>T_CMSYSATTRIBUTE</table-name>
      <parent-table>T_CMABSTRACT</parent-table>
      <!-- columns -->
      <column name="VALUE" type="STRING_LONG" length="2048" not-null="true" />
    </database>
  </definition>

  <!-- create views -->
  <definition>
    <version-expression>(version==2)</version-expression>
    <database>
      <table-name>T_CMSYSATTRIBUTE</table-name>
      <sql>
        create view V_COMMONSYSATTRIBUTE as
          select T_CMABSTRACT.ID,
                 T_CMABSTRACT.NAME,
                 T_CMABSTRACT.UUID,
                 T_CMSYSATTRIBUTE.VALUE
            from T_CMABSTRACT
            join T_CMSYSATTRIBUTE
              on T_CMABSTRACT.ID = T_CMSYSATTRIBUTE.ID
      </sql>
    </database>
  </definition>

  <!-- create base data model -->
  <definition>
    <version-expression>(version==1)</version-expression>
    <database>
      <table-name>T_CMSYSATTRIBUTE</table-name>
      <parent-table>T_CMABSTRACT</parent-table>
      <!-- columns -->
      <column name="VALUE" type="STRING_LONG" length="2048" not-null="true" />
    </database>
  </definition>

</datamodel-sqltable>
