<datamodel-sqltable  xmlns="http://www.efaps.org/xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   xsi:schemaLocation="http://www.efaps.org/xsd http://www.efaps.org/xsd/eFaps_1.0.xsd">
  <uuid>a3a1ab4b-f3c3-49ad-a5cf-fc776ba1990c</uuid>

  <!-- Person object -->

  <!-- create table -->
  <definition>
    <version>
      <application>eFaps</application>
      <global>2</global>
      <local>$Rev$</local>
      <mode>(version==2)</mode>
    </version>
    <database>
      <table-name>T_USERPERSON</table-name>
      <parent-table>T_USERABSTRACT</parent-table>
      <create>true</create>
      <update>true</update>
      <!-- columns -->
      <column name="FIRSTNAME"  type="STRING_SHORT" length="128" not-null="true"/>
      <column name="LASTNAME"   type="STRING_SHORT" length="128" not-null="true"/>
      <column name="EMAIL"      type="STRING_SHORT" length="128" not-null="true"/>
      <column name="PASSWORD"   type="STRING_SHORT" length="128"/>
      <column name="LASTLOGIN"  type="DATETIME"/>
      <column name="LOGINTRY"   type="DATETIME"/>
      <column name="LOGINTRIES" type="INTEGER"/>
     </database>
  </definition>

  <!-- define constraints and view-->
  <definition>
    <version>
      <application>eFaps</application>
      <global>2</global>
      <local>$Rev$</local>
      <mode>(version==4)</mode>
    </version>
    <database>
      <!-- create view representing all persons -->
      <sql>
        create view V_USERPERSON as
           select
                 T_USERABSTRACT.ID,
                 T_USERABSTRACT.NAME,
                 T_USERABSTRACT.STATUS,
                 T_USERPERSON.FIRSTNAME,
                 T_USERPERSON.LASTNAME,
                 T_USERPERSON.EMAIL,
                 T_USERPERSON.PASSWORD,
                 T_USERPERSON.LOGINTRY,
                 T_USERPERSON.LOGINTRIES
             from T_USERABSTRACT
             join T_USERPERSON 
               on T_USERABSTRACT.ID=T_USERPERSON.ID
      </sql>
      <table-name>T_USERPERSON</table-name>
    </database>
  </definition>

  <!-- define data model -->
  <definition>
    <version>
      <application>eFaps</application>
      <global>3</global>
      <local>$Rev$</local>
      <mode>(version==5)</mode>
    </version>
    <name>Admin_User_PersonSQLTable</name>
    <parent>Admin_User_AbstractSQLTable</parent>
    <database>
      <table-name>T_USERPERSON</table-name>
    </database>
  </definition>
</datamodel-sqltable>

