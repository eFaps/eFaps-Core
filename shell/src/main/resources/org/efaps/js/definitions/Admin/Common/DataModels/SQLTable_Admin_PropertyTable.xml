<datamodel-sqltable>
  <uuid>5cf99cd6-06d6-4322-a344-55d206666c9c</uuid>

  <!-- Common Properties -->
  <definition>
    <version>
      <application>eFaps</application>
      <global>1</global>
      <local>1</local>
      <mode>(version==1)</mode>
    </version>

    <database>
      <create>true</create>
      <update>true</update>
      <table-name>PROPERTY</table-name>
      <!-- columns -->
      <column name="ABSTRACT"   type="INTEGER"                    not-null="true"/>
      <column name="NAME"       type="STRING_SHORT" length="128"  not-null="true"/>
      <column name="VALUE"      type="STRING_SHORT" length="128"/>
      <!-- constraints -->
      <unique name="PROPERTY_UK_ABNAME" columns="ABSTRACT,NAME"/>
    </database>
  </definition>

  <!-- make the contraints for the SQL table -->
  <definition>
    <version>
      <application>eFaps</application>
      <global>2</global>
      <local>1</local>
      <mode>(version==3)</mode>
    </version>
    <database>
      <create>false</create>
      <update>false</update>
      <table-name>PROPERTY</table-name>
      <!-- constraints -->
      <foreign name="PROPERTY_FK_ABSTR"     key="ABSTRACT"      reference="ABSTRACT(ID)"/>
<!-- on delete cascade -->
     </database>
  </definition>

  <definition>
    <version>
      <application>eFaps</application>
      <global>3</global>
      <local>$Rev: 473 $</local>
      <mode>(version>=4)</mode>
    </version>
    <name>Admin_PropertyTable</name>
    <database>
      <table-name>PROPERTY</table-name>
    </database>
  </definition>
</datamodel-sqltable>
