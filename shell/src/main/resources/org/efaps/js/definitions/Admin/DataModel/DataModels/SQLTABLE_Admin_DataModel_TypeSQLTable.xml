<datamodel-sqltable>
  <uuid>8f4df2db-8fda-4f00-9144-9a3e344d0abc</uuid>

  <!-- type definition -->
  <definition>
    <version>
      <application>eFaps</application>
      <global>2</global>
      <local>$Rev$</local>
      <mode>(version==2)</mode>
    </version>

    <database>
      <table-name>T_DMTYPE</table-name>
      <parent-table>T_ABSTRACT</parent-table>
      <create>true</create>
      <update>true</update>
      <!-- columns -->
      <column name="PARENTDMTYPE"  type="INTEGER"/>
      <column name="SQLCACHEEXPR"  type="STRING_SHORT"  length="50"/>
    </database>
  </definition>

  <definition>
    <version>
      <application>eFaps</application>
      <global>2</global>
      <local>$Rev$</local>
      <mode>(version==3)</mode>
    </version>

    <database>
      <!-- create view  representing all types -->
      <sql>
        create view V_ADMINTYPE as
            select 
                T_ABSTRACT.ID,
                T_ABSTRACT.UUID,
                T_ABSTRACT.NAME,
                T_DMTYPE.PARENTDMTYPE,
                T_DMTYPE.SQLCACHEEXPR
            from T_DMTYPE,T_ABSTRACT
            where T_ABSTRACT.ID=T_DMTYPE.ID
      </sql>
      <!-- update of the sql table -->
      <table-name>T_DMTYPE</table-name>
      <update>true</update>
      <!-- constraints -->
      <foreign name="T_DMTYPE_FK_PRNTDMTP"    key="PARENTDMTYPE"  reference="T_DMTYPE(ID)"/>
    </database>
  </definition>


  <definition>
    <version>
      <application>eFaps</application>
      <global>3</global>
      <local>$Rev$</local>
      <mode>(version==4)</mode>
    </version>

    <name>Admin_DataModel_TypeSQLTable</name>
    <parent>Admin_AbstractSQLTable</parent>
    <database>
      <table-name>T_DMTYPE</table-name>
    </database>
  </definition>
</datamodel-sqltable>

